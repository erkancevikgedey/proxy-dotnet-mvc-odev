@page
@model LogoutModel
@{
	ViewData["Title"] = "Çıkış Onay Sayfası";
}

<header>
	@{
		if (User.Identity.IsAuthenticated)
		{
			<div class="card">
				<div class="card-header">
					<h4 class="card-title">Çıkış yapmak istediğinize emin misiniz?</h4>
				</div>
				<div class="card-body">
					<form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
						<button type="submit" class="nav-link btn btn-link text-dark" style="background-color:#161d31">Onaylıyorum</button>
						<hr>
						<p>Butona basarak çıkış yapabilirsiniz.</p>
					</form>
				</div>
			</div>
		}
		else
		{
			<p>Başarıyla çıkış zaten yaptınız.</p>
		}
	}
</header>
